<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/display_game"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="antoku.argenttheconsortiumshuffle.ConsortiumBoard">
        <LinearLayout
            android:id="@+id/first_row"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="player_one_clicked"
                android:id="@+id/button_player_one" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="player_two_clicked"
                android:id="@+id/button_player_two" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:onClick="player_three_clicked"
                android:id="@+id/button_player_three" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:onClick="player_four_clicked"
                android:id="@+id/button_player_four" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:onClick="player_five_clicked"
                android:id="@+id/button_player_five" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:onClick="player_six_clicked"
                android:id="@+id/button_player_six" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ip_down"
                android:layout_marginRight="5sp"
                android:layout_marginEnd="0dp"
                android:onClick="ipDown"
                android:id="@+id/ip_down" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ip_up"
                android:layout_marginLeft="5sp"
                android:layout_marginStart="0dp"
                android:onClick="ipUp"
                android:id="@+id/ip_up" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/one" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/two" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_one"
            android:layout_marginBottom="10sp"
            android:onClick="voter_one"
            android:clickable="true"
            android:id="@+id/three" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_two"
            android:layout_marginBottom="10sp"
            android:onClick="voter_two"
            android:clickable="true"
            android:id="@+id/four" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_three"
            android:layout_marginBottom="10sp"
            android:onClick="voter_three"
            android:clickable="true"
            android:id="@+id/five" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_four"
            android:layout_marginBottom="10sp"
            android:onClick="voter_four"
            android:clickable="true"
            android:id="@+id/six" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_five"
            android:layout_marginBottom="10sp"
            android:onClick="voter_five"
            android:clickable="true"
            android:id="@+id/seven" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_six"
            android:layout_marginBottom="10sp"
            android:onClick="voter_six"
            android:clickable="true"
            android:id="@+id/eight" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_seven"
            android:layout_marginBottom="10sp"
            android:onClick="voter_seven"
            android:clickable="true"
            android:id="@+id/nine" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_eight"
            android:layout_marginBottom="10sp"
            android:onClick="voter_eight"
            android:clickable="true"
            android:id="@+id/ten" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_nine"
            android:layout_marginBottom="10sp"
            android:onClick="voter_nine"
            android:clickable="true"
            android:id="@+id/eleven" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/voter_ten"
            android:onClick="voter_ten"
            android:clickable="true"
            android:id="@+id/twelve" />
    </LinearLayout>
</ScrollView>